          }
          
          .modal-header__title {
            font-size: 32px;
          }
          
          .modal-header__button--desktop {
            display: flex;
            grid-area: button-desktop;
            align-self: end;
            justify-self: end;
          }
          
          .modal-header__button--mobile {
            display: none;
          }
