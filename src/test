import React from 'react';
import { X, ChevronRight } from 'lucide-react';

const ModalHeader = ({ 
  title = "Modal Expanded",
  status = "BOOKED",
  statusColor = "bg-green-500",
  buttonText = "VIEW HOTEL DETAILS",
  backgroundImage,
  onClose,
  onButtonClick,
  className = ""
}) => {
  return (
    <header className={`modal-header ${className}`}>
      <div className="modal-header__container">
        {/* Background Image */}
        <div 
          className="modal-header__background"
          style={{ backgroundImage: `url(${backgroundImage})` }}
          aria-hidden="true"
        />
        
        {/* Overlay for better text readability */}
        <div className="modal-header__overlay" />
        
        {/* Content Grid */}
        <div className="modal-header__content">
          {/* Title - Top Left */}
          <h1 className="modal-header__title">
            {title}
          </h1>
          
          {/* Close Button - Top Right */}
          <button 
            className="modal-header__close"
            onClick={onClose}
            aria-label="Close modal"
          >
            <X size={24} />
          </button>
          
          {/* Status Badge - Bottom Left */}
          <div className="modal-header__status">
            <span className={`modal-header__status-badge ${statusColor}`}>
              <span className="modal-header__status-dot" />
              {status}
            </span>
          </div>
          
          {/* Action Button - Bottom Right (Desktop) */}
          <button 
            className="modal-header__button modal-header__button--desktop"
            onClick={onButtonClick}
          >
            {buttonText}
            <ChevronRight size={20} className="modal-header__button-icon" />
          </button>
          
          {/* Action Button - Bottom Center (Mobile) */}
          <button 
            className="modal-header__button modal-header__button--mobile"
            onClick={onButtonClick}
          >
            {buttonText}
            <ChevronRight size={20} className="modal-header__button-icon" />
          </button>
        </div>
      </div>
      
      <style jsx>{`
        .modal-header {
          position: relative;
          width: 100%;
        }
        
        .modal-header__container {
          position: relative;
          min-height: 300px;
          overflow: hidden;
          border-radius: 12px;
        }
        
        .modal-header__background {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
        }
        
        .modal-header__overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.3) 0%,
            rgba(0, 0, 0, 0.1) 50%,
            rgba(0, 0, 0, 0.6) 100%
          );
        }
        
        .modal-header__content {
          position: relative;
          display: grid;
          grid-template-columns: 1fr auto;
          grid-template-rows: auto 1fr auto;
          grid-template-areas:
            "title close"
            "empty empty"
            "status button-mobile";
          gap: 16px;
          padding: 24px;
          min-height: 300px;
          color: white;
        }
        
        .modal-header__title {
          grid-area: title;
          align-self: start;
          font-size: 28px;
          font-weight: 300;
          margin: 0;
          letter-spacing: 0.5px;
        }
        
        .modal-header__close {
          grid-area: close;
          align-self: start;
          justify-self: end;
          background: none;
          border: none;
          color: white;
          cursor: pointer;
          padding: 8px;
          border-radius: 50%;
          transition: background-color 0.2s ease;
        }
        
        .modal-header__close:hover {
          background-color: rgba(255, 255, 255, 0.1);
        }
        
        .modal-header__status {
          grid-area: status;
          align-self: end;
        }
        
        .modal-header__status-badge {
          display: inline-flex;
          align-items: center;
          gap: 8px;
          padding: 10px 20px;
          border-radius: 24px;
          background: white;
          color: #374151;
          font-size: 14px;
          font-weight: 500;
          letter-spacing: 1px;
        }
        
        .modal-header__status-dot {
          width: 8px;
          height: 8px;
          border-radius: 50%;
          background-color: currentColor;
        }
        
        .bg-green-500 .modal-header__status-dot {
          background-color: #10b981;
        }
        
        .modal-header__button {
          display: flex;
          align-items: center;
          gap: 8px;
          padding: 12px 0;
          background: none;
          border: none;
          border-bottom: 2px solid white;
          color: white;
          font-size: 16px;
          font-weight: 500;
          letter-spacing: 1px;
          cursor: pointer;
          transition: all 0.2s ease;
        }
        
        .modal-header__button:hover {
          border-bottom-color: rgba(255, 255, 255, 0.7);
        }
        
        .modal-header__button--desktop {
          display: none;
        }
        
        .modal-header__button--mobile {
          grid-area: button-mobile;
          align-self: end;
          justify-self: center;
        }
        
        .modal-header__button-icon {
          transition: transform 0.2s ease;
        }
        
        .modal-header__button:hover .modal-header__button-icon {
          transform: translateX(4px);
        }
        
        /* Tablet and Desktop Styles */
        @media (min-width: 768px) {
          .modal-header__container {
            min-height: 400px;
          }
          
          .modal-header__content {
            grid-template-areas:
              "title close"
              "empty empty"
              "status button-desktop";
            min-height: 400px;
            padding: 32px;
          }
          
          .modal-header__title {
            font-size: 32px;
          }
          
          .modal-header__button--desktop {
            display: flex;
            grid-area: button-desktop;
            align-self: end;
            justify-self: end;
          }
          
          .modal-header__button--mobile {
            display: none;
          }
        }
        
        /* Large Desktop */
        @media (min-width: 1200px) {
          .modal-header__container {
            min-height: 450px;
          }
          
          .modal-header__content {
            min-height: 450px;
            padding: 40px;
          }
          
          .modal-header__title {
            font-size: 36px;
          }
        }
      `}</style>
    </header>
  );
};

// Example usage component
const ModalHeaderExample = () => {
  const handleClose = () => {
    console.log('Modal closed');
  };
  
  const handleButtonClick = () => {
    console.log('Button clicked');
  };
  
  return (
    <div className="p-4 bg-gray-100 min-h-screen">
      <div className="max-w-4xl mx-auto space-y-8">
        <h2 className="text-2xl font-bold text-gray-800">Modal Header Component</h2>
        
        {/* Example 1: Default */}
        <ModalHeader
          backgroundImage="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?auto=format&fit=crop&w=1000&q=80"
          onClose={handleClose}
          onButtonClick={handleButtonClick}
        />
        
        {/* Example 2: Custom Props */}
        <ModalHeader
          title="Luxury Resort"
          status="AVAILABLE"
          statusColor="bg-blue-500"
          buttonText="VIEW AVAILABILITY"
          backgroundImage="https://images.unsplash.com/photo-1571896349842-33c89424de2d?auto=format&fit=crop&w=1000&q=80"
          onClose={handleClose}
          onButtonClick={handleButtonClick}
        />
      </div>
    </div>
  );
};

export default ModalHeaderExample;



==============================================
import React from 'react';
import { X, ChevronRight } from 'lucide-react';

const ModalHeader = ({ 
  title = "Modal Expanded",
  status = "BOOKED",
  statusColor = "bg-green-500",
  buttonText = "VIEW HOTEL DETAILS",
  backgroundImage,
  onClose,
  onButtonClick,
  className = "",
  fallbackImage = "data:image/svg+xml;base64,"
}) => {
  const [imageLoaded, setImageLoaded] = React.useState(false);
  const [imageError, setImageError] = React.useState(false);
  const [currentImage, setCurrentImage] = React.useState(fallbackImage);

  React.useEffect(() => {
    if (!backgroundImage) return;
    
    setImageLoaded(false);
    setImageError(false);
    
    // Preload the image
    const img = new Image();
    
    img.onload = () => {
      setCurrentImage(backgroundImage);
      setImageLoaded(true);
    };
    
    img.onerror = () => {
      setImageError(true);
      setCurrentImage(fallbackImage);
      setImageLoaded(true);
    };
    
    img.src = backgroundImage;
    
    // Cleanup
    return () => {
      img.onload = null;
      img.onerror = null;
    };
  }, [backgroundImage, fallbackImage]);

  return (
    <header className={`modal-header ${className}`}>
      <div className="modal-header__container">
        {/* Loading State */}
        {!imageLoaded && (
          <div className="modal-header__loading">
            <div className="modal-header__spinner" />
          </div>
        )}
        
        {/* Background Image */}
        <div 
          className={`modal-header__background ${imageLoaded ? 'modal-header__background--loaded' : ''}`}
          style={{ backgroundImage: `url(${currentImage})` }}
          aria-hidden="true"
        />
        
        {/* Overlay for better text readability */}
        <div className="modal-header__overlay" />
        
        {/* Content Grid */}
        <div className="modal-header__content">
          {/* Title - Top Left */}
          <h1 className="modal-header__title">
            {title}
          </h1>
          
          {/* Close Button - Top Right */}
          <button 
            className="modal-header__close"
            onClick={onClose}
            aria-label="Close modal"
          >
            <X size={24} />
          </button>
          
          {/* Status Badge - Bottom Left */}
          <div className="modal-header__status">
            <span className={`modal-header__status-badge ${statusColor}`}>
              <span className="modal-header__status-dot" />
              {status}
            </span>
          </div>
          
          {/* Action Button - Bottom Right (Desktop) */}
          <button 
            className="modal-header__button modal-header__button--desktop"
            onClick={onButtonClick}
          >
            {buttonText}
            <ChevronRight size={20} className="modal-header__button-icon" />
          </button>
          
          {/* Action Button - Bottom Center (Mobile) */}
          <button 
            className="modal-header__button modal-header__button--mobile"
            onClick={onButtonClick}
          >
            {buttonText}
            <ChevronRight size={20} className="modal-header__button-icon" />
          </button>
        </div>
      </div>
      
      <style jsx>{`
        .modal-header {
          position: relative;
          width: 100%;
        }
        
        .modal-header__container {
          position: relative;
          min-height: 300px;
          overflow: hidden;
          border-radius: 12px;
        }
        
        .modal-header__loading {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: #f3f4f6;
          display: flex;
          align-items: center;
          justify-content: center;
          z-index: 1;
        }
        
        .modal-header__spinner {
          width: 40px;
          height: 40px;
          border: 3px solid #e5e7eb;
          border-top: 3px solid #6366f1;
          border-radius: 50%;
          animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
          0% { transform: rotate(0deg); }
          100% { transform: rotate(360deg); }
        }
        
        .modal-header__background {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
          opacity: 0;
          transition: opacity 0.3s ease;
        }
        
        .modal-header__background--loaded {
          opacity: 1;
        }
        
        .modal-header__overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.3) 0%,
            rgba(0, 0, 0, 0.1) 50%,
            rgba(0, 0, 0, 0.6) 100%
          );
        }
        
        .modal-header__content {
          position: relative;
          display: grid;
          grid-template-columns: 1fr auto;
          grid-template-rows: auto 1fr auto;
          grid-template-areas:
            "title close"
            "empty empty"
            "status button-mobile";
          gap: 16px;
          padding: 24px;
          min-height: 300px;
          color: white;
        }
        
        .modal-header__title {
          grid-area: title;
          align-self: start;
          font-size: 28px;
          font-weight: 300;
          margin: 0;
          letter-spacing: 0.5px;
        }
        
        .modal-header__close {
          grid-area: close;
          align-self: start;
          justify-self: end;
          background: none;
          border: none;
          color: white;
          cursor: pointer;
          padding: 8px;
          border-radius: 50%;
          transition: background-color 0.2s ease;
        }
        
        .modal-header__close:hover {
          background-color: rgba(255, 255, 255, 0.1);
        }
        
        .modal-header__status {
          grid-area: status;
          align-self: end;
        }
        
        .modal-header__status-badge {
          display: inline-flex;
          align-items: center;
          gap: 8px;
          padding: 10px 20px;
          border-radius: 24px;
          background: white;
          color: #374151;
          font-size: 14px;
          font-weight: 500;
          letter-spacing: 1px;
        }
        
        .modal-header__status-dot {
          width: 8px;
          height: 8px;
          border-radius: 50%;
          background-color: currentColor;
        }
        
        .bg-green-500 .modal-header__status-dot {
          background-color: #10b981;
        }
        
        .modal-header__button {
          display: flex;
          align-items: center;
          gap: 8px;
          padding: 12px 0;
          background: none;
          border: none;
          border-bottom: 2px solid white;
          color: white;
          font-size: 16px;
          font-weight: 500;
          letter-spacing: 1px;
          cursor: pointer;
          transition: all 0.2s ease;
        }
        
        .modal-header__button:hover {
          border-bottom-color: rgba(255, 255, 255, 0.7);
        }
        
        .modal-header__button--desktop {
          display: none;
        }
        
        .modal-header__button--mobile {
          grid-area: button-mobile;
          align-self: end;
          justify-self: center;
        }
        
        .modal-header__button-icon {
          transition: transform 0.2s ease;
        }
        
        .modal-header__button:hover .modal-header__button-icon {
          transform: translateX(4px);
        }
        
        /* Tablet and Desktop Styles */
        @media (min-width: 768px) {
          .modal-header__container {
            min-height: 400px;
          }
          
          .modal-header__content {
            grid-template-areas:
              "title close"
              "empty empty"
              "status button-desktop";
            min-height: 400px;
            padding: 32px;
          }
          
          .modal-header__title {
            font-size: 32px;
          }
          
          .modal-header__button--desktop {
            display: flex;
            grid-area: button-desktop;
            align-self: end;
            justify-self: end;
          }
          
          .modal-header__button--mobile {
            display: none;
          }
        }
        
        /* Large Desktop */
        @media (min-width: 1200px) {
          .modal-header__container {
            min-height: 450px;
          }
          
          .modal-header__content {
            min-height: 450px;
            padding: 40px;
          }
          
          .modal-header__title {
            font-size: 36px;
          }
        }
      `}</style>
    </header>
  );
};

// Example with API data
const ModalHeaderExample = () => {
  const [hotelData, setHotelData] = React.useState(null);
  const [loading, setLoading] = React.useState(true);
  
  React.useEffect(() => {
    // Simulate API call
    const fetchHotelData = async () => {
      try {
        setLoading(true);
        // Simulate network delay
        await new Promise(resolve => setTimeout(resolve, 1500));
        
        // Mock API response
        setHotelData({
          title: "Grand Palace Hotel",
          status: "BOOKED",
          buttonText: "VIEW HOTEL DETAILS",
          backgroundImage: "https://images.unsplash.com/photo-1564013799919-ab600027ffc6?auto=format&fit=crop&w=1000&q=80"
        });
      } catch (error) {
        console.error('Failed to fetch hotel data:', error);
      } finally {
        setLoading(false);
      }
    };
    
    fetchHotelData();
  }, []);
  
  const handleClose = () => {
    console.log('Modal closed');
  };
  
  const handleButtonClick = () => {
    console.log('Button clicked');
  };
  
  if (loading) {
    return (
      <div className="p-4 bg-gray-100 min-h-screen flex items-center justify-center">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-gray-900 mx-auto mb-4"></div>
          <p>Loading hotel details...</p>
        </div>
      </div>
    );
  }
  
  return (
    <div className="p-4 bg-gray-100 min-h-screen">
      <div className="max-w-4xl mx-auto space-y-8">
        <h2 className="text-2xl font-bold text-gray-800">Modal Header with API Data</h2>
        
        {hotelData && (
          <ModalHeader
            title={hotelData.title}
            status={hotelData.status}
            buttonText={hotelData.buttonText}
            backgroundImage={hotelData.backgroundImage}
            onClose={handleClose}
            onButtonClick={handleButtonClick}
          />
        )}
        
        {/* Example with broken image URL */}
        <div className="mt-8">
          <h3 className="text-lg font-semibold mb-4">Error Handling Example:</h3>
          <ModalHeader
            title="Hotel with Broken Image"
            status="AVAILABLE"
            backgroundImage="https://broken-url.com/nonexistent-image.jpg"
            onClose={handleClose}
            onButtonClick={handleButtonClick}
          />
        </div>
      </div>
    </div>
  );
};

export default ModalHeaderExample;


