import React from 'react';
import { X, ChevronRight } from 'lucide-react';

const ModalHeader = ({ 
  title = "Modal Expanded",
  status = "BOOKED",
  statusColor = "bg-green-500",
  buttonText = "VIEW HOTEL DETAILS",
  backgroundImage,
  onClose,
  onButtonClick,
  className = ""
}) => {
  return (
    <header className={`modal-header ${className}`}>
      <div className="modal-header__container">
        {/* Background Image */}
        <div 
          className="modal-header__background"
          style={{ backgroundImage: `url(${backgroundImage})` }}
          aria-hidden="true"
        />
        
        {/* Overlay for better text readability */}
        <div className="modal-header__overlay" />
        
        {/* Content Grid */}
        <div className="modal-header__content">
          {/* Title - Top Left */}
          <h1 className="modal-header__title">
            {title}
          </h1>
          
          {/* Close Button - Top Right */}
          <button 
            className="modal-header__close"
            onClick={onClose}
            aria-label="Close modal"
          >
            <X size={24} />
          </button>
          
          {/* Status Badge - Bottom Left */}
          <div className="modal-header__status">
            <span className={`modal-header__status-badge ${statusColor}`}>
              <span className="modal-header__status-dot" />
              {status}
            </span>
          </div>
          
          {/* Action Button - Bottom Right (Desktop) */}
          <button 
            className="modal-header__button modal-header__button--desktop"
            onClick={onButtonClick}
          >
            {buttonText}
            <ChevronRight size={20} className="modal-header__button-icon" />
          </button>
          
          {/* Action Button - Bottom Center (Mobile) */}
          <button 
            className="modal-header__button modal-header__button--mobile"
            onClick={onButtonClick}
          >
            {buttonText}
            <ChevronRight size={20} className="modal-header__button-icon" />
          </button>
        </div>
      </div>
      
      <style jsx>{`
        .modal-header {
          position: relative;
          width: 100%;
        }
        
        .modal-header__container {
          position: relative;
          min-height: 300px;
          overflow: hidden;
          border-radius: 12px;
        }
        
        .modal-header__background {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
        }
        
        .modal-header__overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.3) 0%,
            rgba(0, 0, 0, 0.1) 50%,
            rgba(0, 0, 0, 0.6) 100%
          );
        }
        
        .modal-header__content {
          position: relative;
          display: grid;
          grid-template-columns: 1fr auto;
          grid-template-rows: auto 1fr auto;
          grid-template-areas:
            "title close"
            "empty empty"
            "status button-mobile";
          gap: 16px;
          padding: 24px;
          min-height: 300px;
          color: white;
        }
        
        .modal-header__title {
          grid-area: title;
          align-self: start;
          font-size: 28px;
          font-weight: 300;
          margin: 0;
          letter-spacing: 0.5px;
        }
        
        .modal-header__close {
          grid-area: close;
          align-self: start;
          justify-self: end;
          background: none;
          border: none;
          color: white;
          cursor: pointer;
          padding: 8px;
          border-radius: 50%;
          transition: background-color 0.2s ease;
        }
        
        .modal-header__close:hover {
          background-color: rgba(255, 255, 255, 0.1);
        }
        
        .modal-header__status {
          grid-area: status;
          align-self: end;
        }
        
        .modal-header__status-badge {
          display: inline-flex;
          align-items: center;
          gap: 8px;
          padding: 10px 20px;
          border-radius: 24px;
          background: white;
          color: #374151;
          font-size: 14px;
          font-weight: 500;
          letter-spacing: 1px;
        }
        
        .modal-header__status-dot {
          width: 8px;
          height: 8px;
          border-radius: 50%;
          background-color: currentColor;
        }
        
        .bg-green-500 .modal-header__status-dot {
          background-color: #10b981;
        }
        
        .modal-header__button {
          display: flex;
          align-items: center;
          gap: 8px;
          padding: 12px 0;
          background: none;
          border: none;
          border-bottom: 2px solid white;
          color: white;
          font-size: 16px;
          font-weight: 500;
          letter-spacing: 1px;
          cursor: pointer;
          transition: all 0.2s ease;
