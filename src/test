// HotelHero.tsx
type Props = {
  imageSrc: string;                // comes from API
  alt?: string;
  status?: string;                  // e.g., "Booked"
  onClose?: () => void;
  onDetailsClick?: () => void;
};

export default function HotelHero({
  imageSrc,
  alt = "",
  status = "BOOKED",
  onClose,
  onDetailsClick,
}: Props) {
  return (
    <figure className="hotel-hero">
      <img className="hero-img" src={imageSrc} alt={alt} />
      <div className="shade" aria-hidden="true" />
      
      <div className="status">
        <span className="dot" aria-hidden="true" />
        {status}
      </div>

      <button className="close" aria-label="Close" onClick={onClose}>×</button>

      <button className="details" onClick={onDetailsClick}>
        VIEW HOTEL DETAILS
      </button>
    </figure>
  );
}


/* HotelHero.css */
.hotel-hero {
  /* 1) Size/shape & grid setup */
  aspect-ratio: 16 / 9;       /* keeps the hero steady; remove if content-driven */
  width: 100%;
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  grid-template-rows: repeat(12, 1fr);
  margin: 0;
  position: relative;
  overflow: hidden;
  border-radius: 12px;
}

/* 2) Put the image in the back, filling the whole grid */
.hero-img {
  grid-column: 1 / -1;  /* span all columns */
  grid-row: 1 / -1;     /* span all rows */
  width: 100%;
  height: 100%;
  object-fit: cover;     /* nice crop across sizes */
  display: block;
  z-index: 0;
}

/* optional legibility gradient (bottom fade) */
.shade {
  grid-column: 1 / -1;
  grid-row: 1 / -1;
  z-index: 1;
  pointer-events: none;
  background: linear-gradient(to top, rgba(0,0,0,.55) 0%, rgba(0,0,0,0) 45%);
}

/* 3) Overlay items (all layered above) */
.status,
.close,
.details {
  z-index: 2;
  color: #fff;
}

/* Mobile placement (default) */
/* BOOKED → top-left */
.status {
  grid-column: 2 / span 5;  /* near left */
  grid-row: 2 / span 2;     /* near top */
  align-self: start;
  justify-self: start;
  padding: 8px 14px;
  border-radius: 999px;
  background: rgba(255,255,255,.9);
  color: #222;
  font-weight: 600;
  display: inline-flex;
  gap: 8px;
  align-items: center;
  letter-spacing: .06em;
  text-transform: uppercase;
  font-size: clamp(12px, 2.5vw, 14px);
}
.status .dot {
  width: 8px; height: 8px; border-radius: 50%;
  background: #2ecc71;
  display: inline-block;
}

/* × → top-right */
.close {
  grid-column: -3 / -2;   /* near right edge */
  grid-row: 2 / span 2;
  align-self: start;
  justify-self: end;
  background: none;
  border: 0;
  font-size: clamp(18px, 5vw, 28px);
  line-height: 1;
  cursor: pointer;
  color: #fff;
  text-shadow: 0 1px 2px rgba(0,0,0,.5);
}

/* VIEW HOTEL DETAILS → bottom-left */
.details {
  grid-column: 2 / span 7;
  grid-row: -3 / -2;      /* near bottom */
  align-self: end;
  justify-self: start;
  padding: 10px 0;
  background: none;
  border: 0;
  font-weight: 800;
  letter-spacing: .12em;
  text-transform: uppercase;
  border-bottom: 2px solid rgba(255,255,255,.5);
  cursor: pointer;
  font-size: clamp(14px, 2.5vw, 18px);
}

/* Desktop adjustments: reposition per your screenshot */
@media (min-width: 900px) {
  /* BOOKED → bottom-left */
  .status {
    grid-column: 2 / span 4;
    grid-row: -4 / -2;
    align-self: end;
    justify-self: start;
    background: rgba(255,255,255,.92);
  }

  /* DETAILS → bottom-right */
  .details {
    grid-column: 8 / -2;
    grid-row: -3 / -2;
    justify-self: end;
    text-align: right;
    width: max-content;
  }
}
