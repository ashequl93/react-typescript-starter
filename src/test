        .modal-header__button--desktop {
          display: none;
        }
        
        .modal-header__button--mobile {
          grid-area: button-mobile;
          align-self: end;
          justify-self: center;
        }
        
        .modal-header__button-icon {
          transition: transform 0.2s ease;
        }
        
        .modal-header__button:hover .modal-header__button-icon {
          transform: translateX(4px);
        }
        
        /* Tablet and Desktop Styles */
        @media (min-width: 768px) {
          .modal-header__container {
            min-height: 400px;
          }
          
          .modal-header__content {
            grid-template-areas:
              "title close"
              "empty empty"
              "status button-desktop";
