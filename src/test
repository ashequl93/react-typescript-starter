function renderViewToggle({
  wrapperClassName,
  icon,
  label,
  onClick,
}: {
  wrapperClassName: string;
  icon?: React.ReactNode;
  label: string;
  onClick: () => void;
}) {
  return (
    <div className={wrapperClassName}>
      <Button
        className={styles.viewControlLabel}
        icon={icon}
        iconPosition="start"
        priority="tertiary"
        onClick={onClick}
      >
        {label}
      </Button>
    </div>
  );
}

function renderPanelViewInDesktop() {
  return renderViewToggle({
    wrapperClassName: styles.desktopPanel,
    icon:
      activePanel === "split" ? <ListIcon /> :
      activePanel === "leftPanel" ? <SplitIcon /> :
      undefined,
    label:
      activePanel === "split" ? "List View" :
      activePanel === "leftPanel" ? "Map and List View" :
      "",
    onClick: () => setActivePanel((prev) => (prev === "split" ? "leftPanel" : "split")),
  });
}

function renderPanelViewInMobile() {
  return renderViewToggle({
    wrapperClassName: styles.mobilePanel,
    icon: activePanel === "split" || activePanel === "leftPanel" ? <MapIcon /> : <ListIcon />,
    label: activePanel === "split" || activePanel === "leftPanel" ? "Map View" : "List View",
    onClick: () =>
      setActivePanel((prev) =>
        prev === "split" || prev === "leftPanel" ? "rightPanel" : "leftPanel"
      ),
  });
}
